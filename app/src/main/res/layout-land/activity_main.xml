<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/movie_portrait"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/add_movies_to_db_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="173dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="53dp"
        android:width="150dp"
        android:height="150dp"
        android:backgroundTint="@color/dark_red"
        android:text="@string/add_movies_to_db_btn"
        app:layout_constraintBottom_toTopOf="@+id/search_for_actors_btn"
        app:layout_constraintEnd_toStartOf="@+id/search_movies_in_web_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/search_for_movies_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="39dp"
        android:width="150dp"
        android:height="150dp"
        android:backgroundTint="@color/dark_red"
        android:text="@string/search_for_movies_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/search_for_actors_btn"
        app:layout_constraintTop_toBottomOf="@+id/search_movies_in_web_btn" />

    <Button
        android:id="@+id/search_for_actors_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="172dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="104dp"
        android:width="150dp"
        android:height="150dp"
        android:backgroundTint="@color/dark_red"
        android:text="@string/search_for_actors_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/search_for_movies_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_movies_to_db_btn" />

    <Button
        android:id="@+id/search_movies_in_web_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="54dp"
        android:width="150dp"
        android:height="150dp"
        android:backgroundTint="@color/dark_red"
        android:text="@string/search_movies_in_web_btn"
        app:layout_constraintBottom_toTopOf="@+id/search_for_movies_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/add_movies_to_db_btn"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>